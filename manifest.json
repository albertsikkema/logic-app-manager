{
  "manifest_version": 3,
  "name": "Logic App Manager",
  "version": "1.1.0",
  "description": "Backup and restore Azure Logic Apps using Azure Management API with GitHub integration",
  "permissions": [
    "activeTab",
    "scripting",
    "downloads",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "https://portal.azure.com/*",
    "https://*.portal.azure.com/*",
    "https://management.azure.com/*",
    "https://api.github.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://portal.azure.com/*",
        "https://*.portal.azure.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
